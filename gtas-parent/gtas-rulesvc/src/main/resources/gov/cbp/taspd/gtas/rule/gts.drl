package gov.cbp.taspd.gtas.rule;
 
import gov.cbp.taspd.gtas.model.Flight;
import gov.cbp.taspd.gtas.model.Pax;

global java.util.List resultList
 
rule "R1 - Extract Passengers"
    dialect "java"
    when
         f:Flight( passengers.size() > 0, destination != null, passCollection:passengers, dest:destination )
    then
        for(Object p:passCollection){
          insert (p);
        }
end

rule "R2 - List Passengers"
    dialect "java"
    when
        p:Pax( embarkation.equals("Timbuktu"), fn:firstName, ln:lastName )
    then
        resultList.add(p);
end
